<div id="<%= dom_id tweet %>">
  <p>
    <strong>Author:</strong>
    <%= tweet.author %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= tweet.content %>
  </p>
  
  <p>
    <strong>Created at:</strong>
    <%= tweet.created_at.strftime("%A %F %H:%M") %>
  </p>
  
  <p>
    <strong>Likes:</strong>
    <%= tweet.likes %>
  </p>
  


</div>
